{
  "name": "hello",
  "version": "0.0.0",
  "description": "My Project",
  "esy": {
    "build": "dune build -p <PACKAGE_NAME>",
    "buildDev": "pesy",
    "release": {
      "releasedBinaries": [
        "HelloApp.exe"
      ]
    }
  },
  "buildDirs": {
    "test": {
      "require": ["hello.lib"],
      "main": "TestHello",
      "name": "TestHello.exe"
    },
    "library": {
      "name": "hello.lib",
      "namespace": "Hello"
    },
    "executable": {
      "require": ["hello.lib"],
      "main": "HelloApp",
      "name": "HelloApp.exe"
    }
  },
  "scripts": {
    "pesy": "bash -c 'env PESY_MODE=update pesy'",
    "test": "esy x TestHello.exe"
  },
  "dependencies": {
    "@opam/dune": ">=1.6.0",
    "@esy-ocaml/reason": "*",
    "ocaml": "^4.4.0"
  },
  "devDependencies": {
    "ocaml": "4.7.1004",
    "refmterr": "*",
    "pesy": "*",
    "@opam/merlin": "*"
  }
}
